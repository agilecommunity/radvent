= form_for advent_calendar_item do |f|
  %fieldset
    %div.form-group
      = f.label :user_name, "お名前"
      %div
        = f.text_field :user_name, class:"form-control"
    %div.form-group
      = f.label :comment, "コメント(カレンダーに表示されます)"
      %div
        = f.text_area :comment, class:"form-control"
    = f.hidden_field :date, value: @advent_calendar_item.date
    %div
      - if @advent_calendar_item.id
        = link_to "キャンセル", advent_calendar_item_path, class:"btn btn-default" 
      - else
        = link_to "キャンセル", root_path, class:"btn btn-default"
      = f.submit "登録する", class:"btn btn-primary"